{% extends 'base2.html.twig' %}

{% block body %}
<br><br>
<center>
  <p><b>Todas nuestras Tapas</b></p>

  <table border="1" class="table table-striped table-inverse table-hover">
		<tr>
			<th>Nombre</th>
			<th>Descripcion</th>
			<th>Fecha</th>
			<th>Precio</th>
			<th>Foto</th>
		


		</tr>
		{% for fila in TablaTapas %}
			<tr>
		    	<td>{{ fila.nombre }}</td>
		    	<td>{{ fila.descripcion }}</td>
		    	<td>{{ fila.fecha|date('Y-m-d') }}</td>
		    	<td>{{ fila.precio }}</td>
		    	<td><img height="250px" src="{{ asset('img/')}}{{fila.foto}}"></td>
	    	</tr>
    	{% endfor %}
     </table>

</center
{% endblock %}

