{% extends 'plantilla.html.twig' %}

{% block body %}
<br><br>
<center>
  	<p><b>Filtrando por nombre, informacion de la BBDD</b></p>
	<table border="1" class="table table-striped table-inverse table-hover">
	<tr>
	<th>id</th>
		<th>Nombre</th>
		<th>apellidos</th>
		<th>Titulacion</th>
		<th>servicio</th>
		<th>precio</th>
		<th>Mostrar></th>
	</tr>
	{% for fila in servicio %}
		<tr>
			<td>{{ fila.id }}</td>
	    	<td>{{ fila.nombre }}</td>
	    	<td>{{ fila.apellidos }}</td>
	    	<td>{{ fila.titulacion }}</td>
	    	<td>{{ fila.servicio }}</td>
	    	<td>{{ fila.precio }}</td>
	    	<td><a href="{{ path('id', {'id': fila.id  }) }}">Mira por id</a></td>
	 	</tr>
	{% endfor %}
     </table>
</center
{% endblock %}
